<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:startColor="#3B82F6"
                android:endColor="#2563EB"
                android:angle="135" />
            <stroke
                android:width="4dp"
                android:color="#4CAF50" />
        </shape>
    </item>
    
    <!-- Hours text -->
    <item android:left="16dp" android:top="14dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <size android:width="24dp" android:height="20dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <!-- Hours label -->
    <item android:left="44dp" android:top="18dp">
        <shape android:shape="rectangle">
            <solid android:color="#CCFFFFFF" />
            <size android:width="16dp" android:height="12dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <!-- State pill -->
    <item android:left="70dp" android:top="14dp">
        <shape android:shape="rectangle">
            <solid android:color="#80FFFFFF" />
            <size android:width="80dp" android:height="20dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    
    <!-- Button -->
    <item android:right="16dp" android:top="11dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="#EF4444" />
            <size android:width="55dp" android:height="26dp" />
        </shape>
    </item>
    
    <!-- Button text -->
    <item android:right="28dp" android:top="18dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <size android:width="30dp" android:height="12dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list> 