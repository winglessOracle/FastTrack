<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#3B82F6" />
            <stroke
                android:width="3dp"
                android:color="#4CAF50" />
        </shape>
    </item>
    
    <!-- Hours text -->
    <item android:left="16dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <size android:width="40dp" android:height="20dp" />
        </shape>
    </item>
    
    <!-- State text -->
    <item android:left="80dp" android:right="80dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <size android:width="100dp" android:height="20dp" />
        </shape>
    </item>
    
    <!-- Button -->
    <item android:right="16dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="#FFFFFF" />
            <size android:width="60dp" android:height="20dp" />
        </shape>
    </item>
</layer-list> 